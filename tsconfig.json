{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "types": ["node"],
        // "moduleResolution": "node10",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
    },
    "lib": ["es2015"],
    "include": [
        "src/**/*"
    ]
}